<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@mipmap/background">

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ed_border"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="3"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:padding="10dp"
        android:text="Done"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ed_name"
        android:layout_alignStart="@+id/ed_name"
        android:layout_below="@+id/ed_name"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:background="@drawable/ed_border"
        android:elevation="10dp"
        android:ems="10"
        android:hint="College"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="3"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_border"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Sem"
        android:inputType="number"
        android:textColor="#ffffff"
        android:maxLength="1"
        android:padding="5dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="3"
        android:textColorHint="@color/colorAccent"
        android:layout_above="@+id/year"
        android:layout_alignLeft="@+id/college"
        android:layout_alignStart="@+id/college"
        android:layout_marginBottom="33dp" />

    <EditText
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_border"
        android:elevation="10dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Year"
        android:inputType="number"
        android:maxLength="1"
        android:padding="5dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="3"
        android:textColorHint="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/percent"
        android:layout_alignStart="@+id/percent" />

    <EditText
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/ed_border"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Percentage of Attendance"
        android:inputType="number"
        android:maxLength="2"
        android:padding="5dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="3"
        android:textColor="#ffffff"
        android:textColorHint="@color/colorAccent"
        android:textSize="15sp"
        android:layout_below="@+id/year"
        android:layout_alignLeft="@+id/sem"
        android:layout_alignStart="@+id/sem"
        android:layout_alignRight="@+id/sem"
        android:layout_alignEnd="@+id/sem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need Help?"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/help_info" />

</RelativeLayout>