<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/attendance_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="10dp">


                <Spinner
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_column="1"
                    android:padding="5dp"
                    android:background="@drawable/table_border" />

                <RadioButton
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:background="@drawable/table_border"
                    android:text="Bunked"/>

                <RadioButton
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_column="3"
                    android:padding="5dp"
                    android:background="@drawable/table_border"
                    android:text="Free"/>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/save_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:text="Save"
            android:layout_below="@+id/attendance_container"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--<Button
            android:id="@+id/add_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attendance_container"
            android:layout_toLeftOf="@+id/save_attendance"
            android:layout_toStartOf="@+id/save_attendance"
            android:padding="10dp"
            android:text="Add Hour" />-->

    </RelativeLayout>

</ScrollView>